---
interface Heading {
  depth: number;
  slug: string;
  text: string;
}

interface Props {
  headings: Heading[];
}

const { headings } = Astro.props;

// Filter to only h2 and h3
const tocHeadings = headings.filter((h) => h.depth >= 2 && h.depth <= 3);
---

{tocHeadings.length > 0 && (
  <nav class="hidden xl:block sticky top-20 max-h-[calc(100vh-6rem)] overflow-y-auto">
    <h2 class="text-sm font-semibold text-text-secondary uppercase tracking-wide mb-3">
      On this page
    </h2>
    <ul class="space-y-2 text-sm">
      {tocHeadings.map((heading) => (
        <li class={heading.depth === 3 ? "ml-3" : ""}>
          <a
            href={`#${heading.slug}`}
            class="block text-text-secondary hover:text-text transition-colors"
          >
            {heading.text}
          </a>
        </li>
      ))}
    </ul>
  </nav>
)}
